import win32com.client
import os
from datetime import datetime, timedelta

outlook = win32com.client.Dispatch('outlook.application')
mapi = outlook.GetNamespace("MAPI")

for account in mapi.Accounts:
    print(account.DeliveryStore.DisplayName)
for idx, folder in enumerate(mapi.Folders):
    #index starts from 1
    print(idx+1, folder)
for idx, folder in enumerate(mapi.Folders("treasury@kase.kz").Folders):
    print(idx+1, folder)

messages = mapi.Folders("treasury@kase.kz").folders("Входящие").Items
received_dt = datetime.now() - timedelta(days = 1)
received_dt = received_dt.strftime('%m/%d/%Y %H:%M %p')
messages = messages.Restrict("[ReceivedTime] >= '" + received_dt + "'")
messages = messages.Restrict("[SenderEmailAddress] = 'kuan@gmail.kz'")

outputDir = r"C:\Attachments"
try:
    for message in list(messages):
        if message.ReceivedTime > utc.localize(received_dt):
            try:
                s = message.sender
                for attachment in message.Attachments:
                    if attachment.FileName[-4:] in ['.XLS']:
                        attachment.SaveASFile(os.path.join(outputDir,attachment.FileName))
                        print(f"attachment {attachment.FileName} from {s} saved")
            except Exception as e:
                print("error when saving the attachment:" + str(e))
except Exception as e:
    print("error when processing emails messages:" + str(e))
